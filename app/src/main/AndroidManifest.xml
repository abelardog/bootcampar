<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BootCampAr"
        tools:targetApi="31">
        <activity
            android:name=".activities.CourseListActivity"
            android:exported="false"
            android:label="@string/title_activity_course_list"
            android:theme="@style/Theme.BootCampAr" />

        <service
            android:name=".services.CourseService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".services.UserService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activities.HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ar.bootcampar.MainActivity" />
        </activity>
        <activity
            android:name=".activities.CourseDetailActivity"
            android:exported="false"
            android:label="@string/title_course_detail"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ar.bootcampar.MainActivity" />
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:label="@string/title_register"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ar.bootcampar.MainActivity" />
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:label="@string/title_login"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ar.bootcampar.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ResetPasswordActivity"
            android:exported="false"
            android:label="Recuperar clave"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ar.bootcampar.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:exported="true"
            android:resizeableActivity="true"
            android:screenOrientation="sensorPortrait"
            android:supportsPictureInPicture="true">
            <meta-data
                android:name="content_schema"
                android:value="content" />
            <meta-data
                android:name="file_schema"
                android:value="file" />
            <meta-data
                android:name="video_mime_type"
                android:value="video/*" />

            <intent-filter android:scheme="http">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>